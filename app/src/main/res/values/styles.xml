<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.LoginWidget">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="AppTheme.LoginWidget.ErrorText">
        <item name="android:textColor">@color/colorErrorText</item>
    </style>

    <style name="AppTheme.LoginWidget.HeaderText">
        <item name="android:textColor">@color/colorHeaderText</item>
    </style>

    <style name="AppTheme.LoginWidget.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>
